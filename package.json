{
  "name": "weather",
  "version": "1.0.90",
  "engines": {
    "node": ">=22.0.0"
  },
  "description": "Minimalistic weather app with OpenStreetMap integration",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "prepare": "husky install",
    "version:patch": "node scripts/version-update.js patch",
    "version:minor": "node scripts/version-update.js minor",
    "version:major": "node scripts/version-update.js major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run version:patch && git add public/version.json"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  }
}
